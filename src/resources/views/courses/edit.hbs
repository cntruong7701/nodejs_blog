<div class="mt-4">
    <h4>Cập Nhật Khóa Học</h4>
    <form method="post" action="/courses/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">name</label>
            <input name="name" type="text" class="form-control" value="{{courses.name}}" id="name" >
        </div>
        <div class="form-group">
            <label for="description">description</label>
            <input name="description" type="text" class="form-control" value="{{courses.description}}" id="description" >
        </div>
        <div class="form-group">
            <label for="videoId">videoId</label>
            <input name="videoId" type="text" class="form-control" value="{{courses.videoId}}" id="videoId" >
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input name="level" type="text" class="form-control" value="{{courses.level}}" id="level" >
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>